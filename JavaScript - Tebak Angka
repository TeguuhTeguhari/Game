//SAPAAN AWAL
var namaPengunjung = prompt('Hai.. Selamat datang di permainan tebak angka, \nSiapa nama anda?');

var nyawa,
	level,
	repick = true,
	replay = true;
	
while(replay) {
	
	//game level
	while(repick) {
		level = prompt('Silahkan pilih kadar kesulitan game ini \n1 = Easy \n2 = Medium \n3 = Hard');
		if(level === '1') {
	  nyawa = 7;
	  repick = false;
  } else if(level === '2') {
	  nyawa = 5;
	  repick = false;
  } else if(level === '3') {
	  nyawa = 3;
	  repick = false;
  } else {
	  alert('Cukup masukkan nomor dari level yang anda pilih saja(1-3).')
  }
	}//penutup while repick
	repick = true;
	
	//Deklarasi mulainya permainan
	alert('Silahkan bermain tebak angka ' + namaPengunjung + '. Kesempatan menebak anda ada ' + nyawa + '. Harap menebak dengan benar sebelum nyawa anda habis.');
	
	//membangkitkan bilangan acak prima
 var angkaMisterius = Math.random();
 
 //menjadikannya non-prima
 if(angkaMisterius < 0.1) {
	 angkaMisterius = '1';
 } else if(angkaMisterius > 0.1 && angkaMisterius < 0.2) {
	 angkaMisterius = '2';
 } else if(angkaMisterius > 0.2 && angkaMisterius < 0.3) {
	 angkaMisterius = '3';
 } else if(angkaMisterius > 0.3 && angkaMisterius < 0.4) {
	 angkaMisterius = '4';
 } else if(angkaMisterius > 0.4 && angkaMisterius < 0.5) {
	 angkaMisterius = '5';
 } else if(angkaMisterius > 0.5 && angkaMisterius < 0.6) {
	 angkaMisterius = '6';
 } else if(angkaMisterius > 0.6 && angkaMisterius < 0.7) {
	 angkaMisterius = '7';
 } else if(angkaMisterius > 0.7 && angkaMisterius < 0.8) {
	 angkaMisterius = '8';
 } else if(angkaMisterius > 0.8 && angkaMisterius < 0.9) {
	 angkaMisterius = '9';
 } else {
	 angkaMisterius = '10';
 }
 
 //tebakan awal pemain
	var tebakanPlayer = prompt('Oke ' + namaPengunjung + ', sekarang tebak, antara 1-10, angka berapa yang ada di benakku?');
	
	var restart = true;
 while(restart) {
 		var restart2 = true;
 		
 		//rules
 		var hasil = '';
	 if(tebakanPlayer === angkaMisterius) {
		 hasil = 'BENAR';
	 } else if(tebakanPlayer < angkaMisterius) {
		 hasil = 'TERLALU KECIL';
	 } else if(tebakanPlayer > angkaMisterius) {
			hasil = 'TERLALU BESAR';
		} else {
			hasil = 'Jawaban anda tidak sesuai peraturan, anda tereliminasi. Mohon jangan memilih selain angka 1-10.';
			restart = false;
		}
		
		//menampilkan hasil tebakan
		while(nyawa !== 0 && restart2 === true) {
		if(hasil === 'BENAR') {
			alert('Selamat.. \nJawabanmu ' + hasil);
			restart = confirm('Mau nyoba lagi?');
			if(restart === true) {
				alert('Gass...');
				restart = false;
			} else {
				alert('Oke gapapa..');
				restart = false;
				replay = false;
			}
		} else if(hasil === 'TERLALU KECIL' || hasil === 'TERLALU BESAR') {
			alert('Wadooh.. \nJawabanmu ' + hasil + '. Nyawamu berkurang satu.');
			nyawa--;
			if(nyawa !== 0) {
				tebakanPlayer = prompt('Coba tebak lagi');
			} else {}
		} else {}
		 
		if(nyawa === 0) {
			alert('Duhduhduh!! \nKamu kehabisan nyawa..');
			alert('Kamu dinyatakan kalah.');
			restart = false;
			replay = confirm('Mau maen lagi?');
		} else {}
		
		restart2 = false;
		
		}//penutup while restart2
			
		
 	}//penutup while restart
	
}//penutup while replay

//Salam perpisahan
alert('Terima kasih telah mencoba ' + namaPengunjung + '. Sampai jumpa lagi.');
